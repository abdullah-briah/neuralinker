generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// üë§ User
model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  avatarUrl  String?
  bio        String?
  skills     Json?
  title      String?
  linkedin   String?
  github     String?
  role       UserRole @default(user)
  isVerified Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  projects      Project[]        @relation("ProjectOwner")
  joinRequests  JoinRequest[]
  memberships   ProjectMember[]
  notifications Notification[]
  sentMessages  ProjectMessage[] @relation("SentMessages")
}

// üì¶ Project
model Project {
  id          String    @id @default(uuid())
  title       String
  description String
  skills      String?
  category    String
  ownerId     String
  duration    String?
  startDate   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  deletedAt   DateTime?
  isDeleted   Boolean   @default(false)
  isActive    Boolean   @default(true)
  version     Int      @default(1)

  // Relations
  owner         User             @relation("ProjectOwner", fields: [ownerId], references: [id])
  joinRequests  JoinRequest[]
  members       ProjectMember[]
  messages      ProjectMessage[]
  notifications Notification[]   @relation("ProjectNotifications")
  history       ProjectHistory[]
}

// üìú ProjectHistory (For Audit/Version Control)
model ProjectHistory {
  id          String   @id @default(uuid())
  projectId   String
  title       String
  description String
  skills      String? // Snapshot of fields
  category    String?
  duration    String?
  startDate   DateTime?
  
  version     Int
  updatedBy   String   // UserId who made the change
  
  createdAt   DateTime @default(now())

  // Relations
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

// üì® JoinRequest
model JoinRequest {
  id        String            @id @default(uuid())
  userId    String
  projectId String
  status    JoinRequestStatus @default(pending)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  // Relations
  user          User           @relation(fields: [userId], references: [id])
  project       Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  aiInsight     AIInsight?
  notifications Notification[] @relation("JoinRequestNotifications") // Opposite relation for Notification.joinRequest

  // Prevent duplicate join requests
  @@unique([userId, projectId])
}

// ü§ù ProjectMember
model ProjectMember {
  id        String            @id @default(uuid())
  userId    String
  projectId String
  role      ProjectMemberRole @default(member)
  joinedAt  DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  // Relations
  user    User    @relation(fields: [userId], references: [id])
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Prevent duplicate memberships
  @@unique([userId, projectId])
}

// üîî Notification
model Notification {
  id            String   @id @default(uuid())
  userId        String
  projectId     String?
  joinRequestId String?
  title         String
  message       String
  isRead        Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  user        User         @relation(fields: [userId], references: [id])
  project     Project?     @relation("ProjectNotifications", fields: [projectId], references: [id], onDelete: Cascade)
  joinRequest JoinRequest? @relation("JoinRequestNotifications", fields: [joinRequestId], references: [id])
}

// ü§ñ AIInsight
model AIInsight {
  id            String   @id @default(uuid())
  type          String
  joinRequestId String   @unique
  score         Float? // Direct Match Score
  result        Json
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  joinRequest JoinRequest @relation(fields: [joinRequestId], references: [id])
}

// üí¨ ProjectMessage
model ProjectMessage {
  id        String   @id @default(uuid())
  projectId String
  senderId  String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  project       Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  sender  User    @relation("SentMessages", fields: [senderId], references: [id])
}

// Enums
enum UserRole {
  user
  admin
}

enum JoinRequestStatus {
  pending
  accepted
  rejected
}

enum ProjectMemberRole {
  member
  admin
}
